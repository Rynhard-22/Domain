@page "/domain"
@using Blazorise

<PageTitle>Domain</PageTitle>

<h1>Domain</h1>

<p>This component demonstrates fetching data from a service.</p>

<div>
    <div class="row">
        <div class="col">
            <div class="form-outline">
                <input type="text" id="typeText" class="form-control" @bind-value="_domain" placeholder="Search" />
            </div>
            <div class="mt-2 mb-2">
                <button type="button" class="btn btn-primary" @onclick="OnSaveClicked">Search</button>
            </div>
        </div>
        <div class="col">
        </div>
    </div>
</div>

@if (_domainAvailableResponse == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Domain</th>
                <th>Available</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@_domainAvailableResponse.Domain</td>
                @if(!_domainAvailableResponse.Available) 
                {
                    <td>Not Available</td>
                }
                else
                {
                    <td>Available</td>
                }
            </tr>
        </tbody>
    </table>
}

